                                td=val.university ? val.university.substr(0, 30) + (val.university.substr(0, 30).length < val.university.length ? '...' : '') : ''
                                td=val.tshirt ? val.tshirt.toUpperCase() : ''
                                td=val.experience
                                if val.resume
